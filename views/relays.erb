            <div class="row">
                <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-content">
                            <h2>Relays</h2>
<div class="table-responsive">
<table class="footable  table table-stripped toggle-arrow-tiny" data-page-size="10">

   <!--      <table id="sitemap" cellspacing="0" width="100%" class="display table table-list-search"> -->
  <thead>
    <tr>
      <th data-toggle="true">Name</th>
    <!--  <th data-hide="all">Local Name</th> -->
      <th>Local Name</th>
      <th>Place</th>
      <th>Master IP</th>
      <th>Description</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
  <% @relays.each do |relay| %>
   <% rstatus = getrelaystatus(relay.id) %>
    <tr>
      <td><i class='fa fa-sitemap'></i> <strong><%= relay.name %></strong></td>
      <td><%= relay.localname %></td>
      <td><%= relay.place %></td>
      <td><%= relay.masterip %></td>
      <td><%= relay.description %></td>
      <td><strong><%= rstatus %></strong></td>
<td>
<a href="#" class="btn btn-info btn-sm" data-toggle="modal" data-target="#Modal<%= relay.id %>"><i class="fa fa-eye"></i> View </a>
<div class="modal inmodal fade" id="Modal<%= relay.id %>" tabindex="-1" role="dialog" aria-hidden="true">
<div class="modal-dialog">
<div class="modal-content">
<div class="modal-header">
<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
<i class='fa fa-sitemap modal-icon'></i>
<h4 class="modal-title"><%= relay.name %></h4>
<small class="font-bold">View Relay (Read Only)</small>
</div>
<div class="modal-body">
  <fieldset disabled>
<div class="form-group">
<label>Name</label>
<input type="text" name="username" placeholder="Enter text" class="form-control" value="<%= relay.name %>">
</div>
<div class="form-group">
<label>Local Name</label>
<input type="text" name="name" placeholder="Enter text" class="form-control" value="<%= relay.localname %>">
</div>
<div class="form-group">
<label>Place</label>
<input type="text" name="email" placeholder="Enter text" class="form-control" value="<%= relay.place %>">
</div>
<div class="form-group">
<label>Master IP</label>
<input type="text" name="email" placeholder="Enter text" class="form-control" value="<%= relay.masterip %>">
</div>
<div class="form-group">
<label>Description</label>
<input type="text" name="email" placeholder="Enter text" class="form-control" value="<%= relay.description %>">
</div>
<div class="form-group">
<label>Status</label>
<input type="text" name="email" placeholder="Enter text" class="form-control" value="<%= rstatus %>">
</div>
</fieldset>
</div>
<div class="modal-footer">
<button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
</div>
</div>
</div>
</div>
<!-- END MODAL SERVERID -->


      </td>
